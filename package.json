{
  "displayName": "Homebridge Dreambox",
  "name": "homebridge-dreambox",
  "version": "2.0.0",
  "description": "Control your Dreambox as HomeKit Appliance",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mdaskalov/homebridge-dreambox.git"
  },
  "bugs": {
    "url": "https://github.com/mdaskalov/homebridge-dreambox/issues"
  },
  "engines": {
    "node": ">=10.17.0",
    "homebridge": ">=1.3.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build",
    "test": "npm run build && node dist/index.js && echo \"No syntax errors! (node $(node -v))\""
  },
  "keywords": [
    "homebridge-plugin",
    "homekit",
    "dreambox",
    "enigma2"
  ],
  "dependencies": {
    "abort-controller": "^3.0.0",
    "mqtt": "^4.2.1",
    "node-fetch": "^2.6.1",
    "xml2js": "^0.4.23"
  },
  "author": "Milko Daskalov",
  "homepage": "https://github.com/mdaskalov/homebridge-dreambox#readme",
  "devDependencies": {
    "@types/node": "^14.14.31",
    "@types/node-fetch": "^2.5.11",
    "@types/xml2js": "^0.4.9",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "homebridge": "^1.3.1",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  }
}
