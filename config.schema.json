{
  "pluginAlias": "Dreambox",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "devices": {
        "title": "Dreambox Devices",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true
            },
            "hostname": {
              "title": "IP Address / Hostname",
              "type": "string",
              "required": true,
              "format": "hostname"
            },
            "port": {
              "title": "Port",
              "type": "integer",
              "default": 80,
              "maximum": 65535
            },
            "username": {
              "title": "Username",
              "type": "string",
              "format": "password"
            },
            "password": {
              "title": "Password",
              "type": "string",
              "format": "password"
            },
            "bouquet": {
              "title": "Bouquet Name",
              "type": "string"
            },
            "channels": {
              "title": "Channel Buttons",
              "expandable": true,
              "expanded": false,
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Name",
                    "type": "string",
                    "required": true
                  },
                  "ref": {
                    "title": "Reference",
                    "type": "string",
                    "required": true
                  }
                }
              }
            },
            "mqttTopic": {
              "title": "MQTT Topic",
              "type": "string"
            }
          }
        }
      },
      "deviceType": {
        "title": "Device type to publish",
        "type": "string",
        "oneOf": [{
          "title": "TV Set-Top Box (STB)",
          "enum": ["TV_SET_TOP_BOX"]
        }, {
          "title": "TV Streaming Stick",
          "enum": ["TV_STREAMING_STICK"]
        }, {
          "title": "Audio Receiver",
          "enum": ["AUDIO_RECEIVER"]
        }, {
          "title": "TV",
          "enum": ["TELEVISION"]
        }]
      },
      "mqtt": {
        "title": "Use MQTT to update the dreambox state",
        "type": "boolean"
      },
      "mqttBroker": {
        "title": "MQTT Broker Hostname (default: localhost)",
        "type": "string",
        "format": "hostname"
      },
      "mqttUsername": {
        "title": "MQTT Broker Username",
        "type": "string",
        "format": "password"
      },
      "mqttPassword": {
        "title": "MQTT Broker Password",
        "type": "string",
        "format": "password"
      }
    }
  },
  "layout": [{
      "nodescription": true,
      "notitle": true,
      "key": "devices",
      "title": "{{ 'Device ' + $index}}",
      "type": "tabarray",
      "items": [{
        "key": "devices[].name"
      }, {
        "key": "devices[].hostname"
      }, {
        "key": "devices[].port"
      }, {
        "key": "devices[].username"
      }, {
        "key": "devices[].password"
      }, {
        "key": "devices[].bouquet"
      }, {
        "key": "devices[].channels",
        "buttonText": "Add Channel",
        "items": [{
          "type": "div",
          "displayFlex": false,
          "items": [{
            "type": "flex",
            "flex-flow": "row wrap",
            "items": [{
                "type": "flex",
                "flex-flow": "column",
                "items": ["devices[].channels[].name"]
              },
              {
                "type": "flex",
                "flex-flow": "column",
                "items": ["devices[].channels[].ref"]
              }
            ]
          }]
        }]
      }, {
        "key": "devices[].mqttTopic"
      }]
    },
    {
      "type": "fieldset",
      "title": "Advanced Settings",
      "expandable": true,
      "expanded": false,
      "items": [{
          "type": "help",
          "helpvalue": "<em class='text-danger'>Configuration settings for advanced user.</em>"
        },
        "deviceType", "mqtt", "mqttBroker", "mqttUsername", "mqttPassword"
      ]
    }
  ]
}