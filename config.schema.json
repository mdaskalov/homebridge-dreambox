{
  "pluginAlias": "Dreambox",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "More info about this plugin at [GitHub](https://github.com/mdaskalov/). Feel free to give me a star.",
  "footerDisplay": "Made with ❤️ by Millko Daskalov",
  "schema": {
    "type": "object",
    "properties": {
      "devices": {
        "title": "Dreambox Devices",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true
            },
            "hostname": {
              "title": "IP Address/Hostname",
              "type": "string",
              "required": true,
              "format": "hostname"
            }
          }
        }
      },
      "advanced": {
        "title": "Use advanced setting",
        "type": "boolean"
      }
    }
  },
  "layout": [{
      "nodescription": true,
      "notitle": true,
      "key": "devices",
      "title": "{{ 'Device ' + $index}}",
      "type": "tabarray",
      "items": [{
        "key": "devices[].name"
      }, {
        "key": "devices[].hostname"
      }]
    },
    {
      "type": "fieldset",
      "title": "Advanced Settings",
      "expandable": true,
      "expanded": false,
      "items": [{
          "type": "help",
          "helpvalue": "<em class='text-danger'>Use only if you know what you are doing !</em>"
        },
        "advanced"
      ]
    }
  ]
}