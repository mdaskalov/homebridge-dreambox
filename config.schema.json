{
  "pluginAlias": "Dreambox",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "devices": {
        "title": "Dreambox Devices",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true
            },
            "hostname": {
              "title": "IP Address / Hostname",
              "type": "string",
              "required": true,
              "format": "hostname"
            },
            "username": {
              "title": "Username",
              "type": "string",
              "format": "password"
            },
            "password": {
              "title": "Password",
              "type": "string",
              "format": "password"
            },
            "bouquet": {
              "title": "Bouquet Name",
              "type": "string"
            }
          }
        }
      },
      "mqtt": {
        "title": "Use MQTT to update the dreambox state",
        "type": "boolean"
      }
    }
  },
  "layout": [{
      "nodescription": true,
      "notitle": true,
      "key": "devices",
      "title": "{{ 'Device ' + $index}}",
      "type": "tabarray",
      "items": [{
        "key": "devices[].name"
      }, {
        "key": "devices[].hostname"
      }, {
        "key": "devices[].username"
      }, {
        "key": "devices[].password"
      }, {
        "key": "devices[].bouquet"
      }]
    },
    {
      "type": "fieldset",
      "title": "Advanced Settings",
      "expandable": true,
      "expanded": false,
      "items": [{
          "type": "help",
          "helpvalue": "<em class='text-danger'>Configuration settings for advanced user.</em>"
        },
        "mqtt"
      ]
    }
  ]
}