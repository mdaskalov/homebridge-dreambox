{
  "pluginAlias": "Dreambox",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "devices": {
        "title": "{{idx}} Device",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true
            },
            "hostname": {
              "title": "IP Address / Hostname",
              "type": "string",
              "required": true,
              "format": "hostname"
            },
            "port": {
              "title": "Port",
              "type": "integer",
              "default": 80,
              "maximum": 65535
            },
            "username": {
              "title": "Username",
              "type": "string",
              "format": "password"
            },
            "password": {
              "title": "Password",
              "type": "string",
              "format": "password"
            },
            "bouquet": {
              "title": "Bouquet Name",
              "type": "string"
            },
            "channels": {
              "title": "Button",
              "expandable": true,
              "expanded": false,
              "type": "array",
              "default": [],
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Name",
                    "type": "string",
                    "required": true
                  },
                  "ref": {
                    "title": "Reference",
                    "type": "string",
                    "required": true
                  }
                }
              }
            },
            "mqttTopic": {
              "title": "MQTT Topic",
              "type": "string"
            }
          }
        }
      },
      "mqtt": {
        "title": "Use MQTT to update the dreambox state",
        "type": "boolean"
      },
      "mqttBroker": {
        "title": "MQTT Broker Hostname (default: localhost)",
        "type": "string",
        "format": "hostname"
      },
      "mqttUsername": {
        "title": "MQTT Broker Username",
        "type": "string",
        "format": "password"
      },
      "mqttPassword": {
        "title": "MQTT Broker Password",
        "type": "string",
        "format": "password"
      }
    }
  },
  "layout": [{
      "type": "tabarray",
      "items": {
        "nodescription": true,
        "notitle": true,
        "legend": "{{idx}}. Device",
        "type": "section",
        "items": [
          "devices[].name",
          "devices[].hostname",
          "devices[].port",
          "devices[].username",
          "devices[].password",
          "devices[].bouquet",
          {
            "title": "Channel Buttons",
            "buttonText": "Add Button",
            "type": "array",
            "items": [
              "devices[].channels[].name",
              "devices[].channels[].ref"
            ]
          },
          "devices[].mqttTopic"
        ]
      }
    },
    {
      "type": "fieldset",
      "title": "Advanced Settings",
      "expandable": true,
      "expanded": false,
      "items": [{
          "type": "help",
          "helpvalue": "<em class='text-danger'>Configuration settings for advanced user.</em>"
        },
        "mqtt", "mqttBroker", "mqttUsername", "mqttPassword"
      ]
    }
  ]
}